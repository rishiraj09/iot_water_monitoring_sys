<%- include('../../includes/auth/auth_head.ejs') %>

    <body>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-6">
                        <div class="auth_container_wrap">
                            <div class="auth_logo_container">
                                <img class="auth_logo" src="/assets/img/sapienzaLogo.png" alt="Sapienza Logo">
                            </div>
                            <div class="auth_title">
                                <span>Sign In</span>
                            </div>

                            <form action="/auth/signin" method="POST">
                                <div class="form-group mb-4">

                                    <input type="email" id="email" class="form-control auth_input_border" name="email"
                                        value="<%=oldInput.email%>" placeholder="Email">
                                </div>
                                <div class="form-group mb-4">
                                    <input type="password" id="password" class="form-control auth_input_border"
                                        value="<%=oldInput.password%>" name="password" placeholder="Password">
                                </div>
                                <div class="row">
                                    <div class="col-md-3"></div>
                                    <div class="col-md-6">
                                        <button class="btn btn-block auth_btn">Sign In</button>
                                    </div>
                                    <div class="col-md-3"></div>
                                </div>
                            </form>
                            <%if(errorMessage){%>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong>
                                        <%= errorMessage %>
                                    </strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <%}%>

                                    <div class="signin_text">
                                        Don't have an account? <a class="signin_link" href="/auth/signup">Sign Up</a>
                                    </div>

                        </div>
                    </div>
                    <div class="col-md-3"></div>

                </div>

            </div>
        </section>
        <%- include('../../includes/auth/auth_end.ejs') %>